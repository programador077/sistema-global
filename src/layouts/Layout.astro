---
interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Sistema Global - Modern Ecommerce",
	description = "Discover premium products with our modern ecommerce platform. Shop electronics, fashion, home goods, and more.",
} = Astro.props;

import "../styles/global.css";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial=" 1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body>
		<slot />
	</body>
</html>
